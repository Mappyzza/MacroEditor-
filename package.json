  "main": "dist/main.js",
  "homepage": "./",
  "scripts": {
    "build-main": "tsc src/main/main.ts --outDir dist --target es2020 --module commonjs --moduleResolution node --esModuleInterop --allowSyntheticDefaultImports --skipLibCheck",
    "build-renderer": "webpack --mode development",
    "build-dev": "npm run build-main && npm run build-renderer",
    "build": "npm run build-main && webpack --mode production",
    "dev": "webpack serve --mode development",
    "electron": "electron .",
    "electron-dev": "npm run build-dev && electron .",
    "package": "npm run build && electron-builder",
    "start": "npm run build && npm run electron"
  },
  "keywords": [
    "macro",
    "automation",
    "editor",
    "desktop"
  ],
